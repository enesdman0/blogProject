<%- include('../partials/_head.ejs') %>

    <body class="p-6">
        <!-- Navigation -->
        <%- include('../partials/_nav.ejs') %>
            <!-- End Navigation -->
            <!-- Blog Cards -->
            <div class="flex flex-wrap justify-center items-center container">
                <div class="overflow-x-auto w-full">
                    <table class="table table-zebra">
                        <!-- head -->
                        <thead>
                            <tr>
                                <th></th>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Description</th>
                                <th>Date of registration</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- row 1 -->
                            <% users.forEach(user=> { %>
                                <tr>
                                    <th>1</th>
                                    <td class="max-w-[50px]"><img class="rounded-full" src="/uploads/<%= user.photo %>"
                                            alt=""></td>
                                    <td>
                                            <%= user.name %>
                                </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                            <%= user.authorApplicationMessage %>
                                      </td>
                                    <td>
                                        <%= user.dataCreated.toString().substring(4,15) %>
                                    </td>
                                    <td><a href="author_application_approve/<%= user._id %>" class="underline link-success">Approve</a></td>
                                    <td><a href="author_application_disapprove/<%= user._id %>" class="underline link-error">Disapprove</a></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>

            <%- include('../partials/_footer.ejs') %>

    </body>

    </html>