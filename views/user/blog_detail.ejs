<%- include('../partials/_head.ejs') %>

    <body class="p-6">
        <!-- Navigation -->
        <%- include('../partials/_nav.ejs') %>
            <!-- End Navigation -->
            <!-- Blog Detail -->
            <div class="container mx-auto bg-base-100 rounded-box shadow-lg p-3">
                <img class="w-full rounded-box object-cover object-center h-64 mb-6" src="/uploads/<%= blog.photo %>"
                    alt="Blog Post Image">


                <div class="px-6 py-4">
                    <h2 class="text-5xl font-bold mb-4">
                        <%= blog.title %>
                    </h2>
                    <p class="text-base font-medium mb-4 bg-base-200 p-3 rounded-box">
                        <%= blog.subtitle %>
                    </p>

                    <div class="text-base px-3">
                        <p><%- blog.description %>
                        </p>
                        <!-- Ä°sterseniz daha fazla paragraf ekleyebilirsiniz. -->
                    </div>
                    <!-- Alt sayfa -->
                    <div class="space-y-4 mt-24">
                        <div class="flex items-center mt-12">
                            <img class="w-10 h-10 rounded-full mr-2 object-cover object-center"
                                src="/uploads/<%= blog.author.photo %>" alt="Author Avatar">
                            <a href="/author_profile/<%= blog.author._id %>/<%= blog.author.slug %>">
                                <%= blog.author.name %>
                            </a>
                        </div>
                        <div class="join">
                            <button class="btn join-item no-animation">
                                <i class="fa-solid fa-eye"></i>

                            </button>
                            <button class="btn join-item ">
                                <%= blog.view %>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../partials/_footer.ejs') %>

    </body>

    </html>